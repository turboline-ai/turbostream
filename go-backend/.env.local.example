# Server
NODE_ENV=development
BACKEND_HOST=0.0.0.0
BACKEND_PORT=7210
CORS_ORIGIN=http://localhost:7200
REQUEST_TIMEOUT_MS=15000

# Auth / crypto
JWT_SECRET=change-me
ENCRYPTION_KEY=change-me-please

# MongoDB
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=realtime_crypto

# ============================================
# LLM Provider Configuration (LangChain Go)
# ============================================
# Set DEFAULT_AI_PROVIDER to one of: azure-openai, openai, anthropic, google, ollama
DEFAULT_AI_PROVIDER=azure-openai

# Azure OpenAI (recommended for enterprise)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-api-key
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o

# OpenAI (direct API)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Google AI (Gemini)
GOOGLE_API_KEY=your-google-api-key
GOOGLE_MODEL=gemini-1.5-pro

# Ollama (local LLM - no API key needed)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# LLM Settings
LLM_MAX_TOKENS=1024
LLM_TEMPERATURE=0.7
LLM_CONTEXT_LIMIT=50

# ============================================

# Stripe (optional)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Token limits (optional)
TOKEN_QUOTA_PER_MONTH=1000000

